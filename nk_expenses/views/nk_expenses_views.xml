<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ==================== form ====================== -->
    <record id="nk_expenses_view_form" model="ir.ui.view">
        <field name="name">nk_expenses.view.form</field>
        <field name="model">nk.expenses</field>
        <field name="arch" type="xml">
            <form string="Expenses">
                <sheet>
                    <group>
                        <group><field name="date" /></group>
                        <group><field name="day_total" /></group>
                        <group><field name="transport_total" /></group>
                    </group>
                    <notebook>
                        <page string="Expense Line">
                            <field name="expense_line" widget="section_and_note_one2many">
                                <tree editable="bottom">
                                    <control>
                                        <create name="add_product_control" string="Add a product"/>
                                        <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                    </control>
                                    <field name="display_type" invisible="1"/>
                                    <field name="sequence" widget="handle" />
                                    <field name="name" widget="section_and_note_text" />
                                    <field name="expense_type_id" />
                                    <field name="spend" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ==================== tree ====================== -->
    <record id="nk_expenses_view_tree" model="ir.ui.view">
        <field name="name">nk_expenses.view.tree</field>
        <field name="model">nk.expenses</field>
        <field name="arch" type="xml">
            <tree string="Expenses">
                <field name="date" />
                <field name="day_total" />
                <field name="transport_total" />
            </tree>
        </field>
    </record>

    <!-- ==================== action ====================== -->
    <record id="nk_expenses_action" model="ir.actions.act_window">
        <field name="name">Expenses</field>
        <field name="res_model">nk.expenses</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>