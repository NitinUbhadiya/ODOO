<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ==================== form ====================== -->
    <record id="nk_expense_type_view_form" model="ir.ui.view">
        <field name="name">nk_expense_type.view.form</field>
        <field name="model">nk.expense.type</field>
        <field name="arch" type="xml">
            <form string="Expense Type">
                <sheet>
                    <group>
                        <field name="name" />
                        <!-- <field name="color" widget="color_picker" /> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ==================== tree ====================== -->
    <record id="nk_expense_type_view_tree" model="ir.ui.view">
        <field name="name">nk_expense_type.view.tree</field>
        <field name="model">nk.expense.type</field>
        <field name="arch" type="xml">
            <tree string="Expesnse Type">
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- ==================== action ====================== -->
    <record id="nk_expense_type_action" model="ir.actions.act_window">
        <field name="name">Expense Type</field>
        <field name="res_model">nk.expense.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>